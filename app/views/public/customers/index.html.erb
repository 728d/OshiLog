<div class="container">
  <div class="row">
    <div class="col-3">
    <%= render 'layouts/user_info', user_info: @user_info, oshi_log: @oshi_log %>
    </div>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <th>image</th>
        <th>name</th>
        <th>oshi name</th>
        <th></th>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
         <tr>
          <td>
           <%= image_tag customer.get_profile_image(100,100) %>
          </td>

          <td><%= customer.name %></td>
          <td><%= customer.oshi_name %></td>
          <td><%= link_to 'Show', customer_path(customer.id) %></td>
         </tr>
        <% end %>
      </tbody>

    </table>

    </div>

  </div>
</div>